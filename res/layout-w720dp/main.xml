<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TopLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/DominoesBackgroundColor"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/titleGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:maxWidth="816dp"
        android:minHeight="114dp"
        android:minWidth="523dp"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/menuPlayGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleGraphic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:minHeight="44dp"
        android:minWidth="247dp"
        android:src="@drawable/play" />

    <Button
        android:id="@+id/blockbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/menuPlayGraphic"
        android:layout_toRightOf="@id/menuPlayGraphic"
        android:background="@drawable/block_button"
        android:minHeight="44dp"
        android:minWidth="261dp" />

    <ImageView
        android:id="@+id/menuSpacerGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blockbutton"
        android:layout_below="@+id/blockbutton"
        android:minHeight="46dp"
        android:minWidth="46dp"
        android:src="@drawable/spacer" />

    <Button
        android:id="@+id/housebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menuSpacerGraphic"
        android:layout_below="@+id/menuSpacerGraphic"
        android:background="@drawable/house_button"
        android:minHeight="44dp"
        android:minWidth="261dp" />

    <Button
        android:id="@+id/instructionsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/housebutton"
        android:layout_below="@+id/housebutton"
        android:layout_marginTop="51dp"
        android:background="@drawable/instructions_button"
        android:minHeight="44dp"
        android:minWidth="261dp" />

</RelativeLayout>